  "linterOptions": {
    "exclude": ["**/node_modules/**/*", "src/gql/types.ts", "**/*.json"]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "await-promise": [true, "Bluebird"]
  },
  "jsRules": {}
}
