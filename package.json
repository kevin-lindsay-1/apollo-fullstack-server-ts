{
  "name": "fullstack-tutorial-server",
  "author": "kevin lindsay",
  "description": "test",
  "version": "1.0.0",
  "license": "ISC",
  "main": "build/index.js:4000",
  "scripts": {
    "start": "node build/index.js -r dotenv/config",
    "debug": "npm run clean && npm run watch-debug",
    "clean": "shx rm -rf build",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
    "watch-ts": "tsc -w",
    "serve-debug": "nodemon build/index.js -- -r dotenv/config --inspect",
    "build": "npm run clean && npm run build-ts",
    "build-ts": "tsc",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon build/index.js -- -r dotenv/config",
    "precommit": "npm run lint && npm run format && npm run test",
    "lint": "tsc --noEmit && tslint -c tslint.json -p tsconfig.json",
    "format": "prettier --write src/**/*.{ts,json}"
  },
  "dependencies": {
    "apollo-datasource": "^0.1.3",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-server": "^2.3.1",
    "dotenv": "^6.1.0",
    "graphql": "^14.0.2",
    "isemail": "^3.1.3",
    "nodemon": "^1.18.9",
    "sequelize": "^4.39.0",
    "sqlite3": "^4.0.3"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/sequelize": "^4.27.33",
    "apollo-link": "^1.2.3",
    "apollo-link-http": "^1.5.5",
    "apollo-server-testing": "^2.3.1",
    "concurrently": "^4.1.0",
    "graphql-tag": "^2.10.0",
    "jest": "^23.6.0",
    "nock": "^10.0.2",
    "node-fetch": "^2.2.1",
    "prettier": "^1.15.3",
    "prettier-tslint": "^0.4.2",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typescript-estree": "^7.0.1"
  }
}
