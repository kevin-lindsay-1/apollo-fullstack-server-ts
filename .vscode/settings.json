{
  "cSpell.ignorePaths": [
    "**/package.json",
    "**/package-lock.json",
    "**/node_modules/**",
    "**/vscode-extension/**",
    "**/.git/**",
    ".vscode",
    "typings"
  ],
  "cSpell.words": ["datasource", "datasources", "isemail"],
  "editor.formatOnSave": true,
  "prettier.tslintIntegration": true,
  "todo-tree.customHighlight": {
    "FIXME": {
      "background": "red"
    },
    "TODO": {
      "background": "yellow"
    }
  },
  "typescript.referencesCodeLens.enabled": true,
  "files.exclude": {
    "**/node_modules": true
  }
}
