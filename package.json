{
  "name": "fullstack-tutorial-server",
  "author": "kevin lindsay",
  "description": "test",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "start": "env-cmd .env node build/index.js",
    "debug": "env-cmd .env concurrently -k -p \"[{name}]\" -n \"GraphQL,TypeScript,Node\" -c \"red.bold,cyan.bold,green.bold\" \"npm run gqlgen:watch\" \"npm run tsc:watch\" \"npm run node:watch\"",
    "prebuild": "npm run clean && npm run gqlgen && npm run check",
    "build": "tsc",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "test:watch": "npm run test -- --watchAll",
    "precommit": "npm run check",
    "check": "npm run lint && npm run format && npm run test",
    "clean": "shx rm -rf build",
    "format": "prettier --write src/**/*.{ts,json}",
    "gqlgen:watch": "gql-gen --watch --config codegen.yml",
    "gqlgen": "gql-gen --config codegen.yml",
    "lint": "tsc --noEmit && tslint -c tslint.json -p tsconfig.json",
    "node:watch": "nodemon build/index.js -- --inspect",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "apollo-datasource": "^0.1.3",
    "apollo-datasource-rest": "^0.1.5",
    "apollo-server": "^2.3.1",
    "env-cmd": "^8.0.2",
    "graphql": "^14.0.2",
    "isemail": "^3.1.3",
    "nodemon": "^1.18.9",
    "sequelize": "^4.39.0",
    "sqlite3": "^4.0.3"
  },
  "devDependencies": {
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/node-fetch": "^2.1.4",
    "@types/sequelize": "^4.27.33",
    "apollo-link": "^1.2.3",
    "apollo-link-http": "^1.5.5",
    "apollo-server-testing": "^2.3.1",
    "concurrently": "^4.1.0",
    "graphql-code-generator": "^0.15.2",
    "graphql-codegen-introspection": "^0.15.2",
    "graphql-codegen-typescript-common": "0.15.2",
    "graphql-codegen-typescript-resolvers": "0.15.2",
    "graphql-codegen-typescript-server": "0.15.2",
    "graphql-tag": "^2.10.0",
    "jest": "^23.6.0",
    "nock": "^10.0.2",
    "node-fetch": "^2.2.1",
    "prettier": "^1.15.3",
    "prettier-tslint": "^0.4.2",
    "shx": "^0.3.2",
    "ts-jest": "^23.10.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.2.2",
    "typescript-estree": "^7.0.1",
    "typescript-tslint-plugin": "^0.2.1"
  }
}
